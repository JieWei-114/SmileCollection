<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ls.smilecollection.FaceDetectionOverlayView
        android:id="@+id/faceDetectionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:id="@+id/capture"
        android:src="@drawable/ic_round_camera_24"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#fff"
        />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="showPopup"
        android:src="@drawable/ic_baseline_menu_24"
        app:tint="#fff" />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="40sp"
        android:src="@drawable/ic_round_flip_camera_android_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/flip"
        app:tint="#fff"
        />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="40sp"
        android:src="@drawable/ic_baseline_collections_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/gallery"
        app:tint="#fff"
        />

    <View
        android:id="@+id/topView"
        android:layout_margin="20sp"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/default_color"
        android:visibility="visible" />

</RelativeLayout>
